<style>

  h1 {
		color: white;
		font-size: 55px;
	}

	h2 {
		font-weight: bold;
		font-size: 30px
	}

	p {
		font-size: 15px;
	}

	img {
		border-radius: 15px;
		max-width: 100%;
	}

  .centralizar {
    text-align: center;
  }

  .fundo-bege {
    background-color: #f8efe5;
    min-height: 544px;
  }

	.coluna-padding-top {
		padding-top: 35px;
	}

  .padding-bottom-texto {
    padding-bottom: 40px;
  }

  .padding-top-botao {
    padding-top: 25px;
  }

  .img-fundo-coluna {
    background-image: url(/public/img/v3-chocolate.png);
    background-size: auto 100%;
    background-repeat: no-repeat;
    margin-top: 35px;
  }

  .padding-left-texto {
    padding-left: 10px;
  }

  .padding-top-selos {
    padding-top: 15px;
  }

  .padding-top-logo {
    padding-top: 80px;
  }

</style>

<div class="fundo-bege">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 offset-lg-1 padding-top-logo">
        <img src="/public/img/logo_oficial.svg" alt="Logo FarmerLink">
      </div>
      <div class="col-lg-4 offset-lg-2 coluna-padding-top img-fundo-coluna px-5 padding-left-texto">
        <h2 class="centralizar padding-bottom-texto">Entre na sua conta</h2>
        <div class="mb-2 padding-left-texto">
          <label for="inputEmail" class="form-label">E-mail</label>
          <input
            type="text"
            id="inputEmail"
            class="form-control"
            maxlength="100"
            size="40px"
          />
        </div>
        <div class="mb-2 padding-left-texto">
          <label for="inputSenha" class="form-label">Senha</label>
          <input
            type="password"
            id="inputSenha"
            class="form-control"
            maxlength="100"
            size="40px"
          />
        </div>
        <div class="d-grid padding-top-botao padding-left-texto">
          <button
            type="button"
            onclick="efetuarLogin()"
            class="btn btn-primary"
          >
            Entrar
          </button>
        </div>
        <p class="centralizar padding-top-botao padding-right-texto padding-left-texto">
          <a
            href="https://google.com"
            target="_blank"
            class="formatar-link-cadastrar"
            >Esqueci minha senha</a
          >
        </p>
        <p class="centralizar padding-bottom-texto padding-right-texto padding-left-texto">
          Novo na Farmer Link?
          <a href="/cadastro" class="formatar-link-cadastrar">Cadastrar</a>
        </p>
      </div>
    </div>
  </div>
</div>


<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 offset-md-1 centralizar padding-top-selos">
      <p>
        <img
          src="/public/img/entrega_rapida.png"
          width="50px"
          alt="Ícone de caixa"
        />
        Entrega rápida
      </p>
    </div>
    <div class="col-md-4 centralizar padding-top-selos">
      <p>
        <img
          src="/public/img/qualidade_garantida.png"
          width="50px"
          alt="Ícone sinal positivo"
        />
        Qualidade garantida
      </p>
    </div>
    <div class="col-md-3 centralizar padding-top-selos">
      <p>
        <img
          src="/public/img/eco_friendly.png"
          width="50px"
          alt="Ícone folha"
        />
        Eco friendly
      </p>
    </div>
  </div>
</div>

<script>
  function efetuarLogin() {
    let inputEmail = document.getElementById("inputEmail");
    let inputSenha = document.getElementById("inputSenha");

    let email = inputEmail.value;
    let senha = inputSenha.value;

    if (!email) {
      console.log("E-mail vazio!");
      return;
    } else {
      console.log("E-mail: " + email);
    }

    if (!senha) {
      console.log("Senha vazia!");
      return;
    } else {
      console.log("Senha: " + senha);
    }
  }
</script>
